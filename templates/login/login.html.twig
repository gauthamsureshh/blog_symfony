{% extends 'base.html.twig' %}

{% block title %}Login
{% endblock %}

{% block body %}
	{% include "partials/navbar.html.twig" %}

	<div class="flex justify-center items-center min-h-[calc(100vh-5rem)] bg-gray-100 dark:bg-gray-800">
		<div class="w-full max-w-md bg-white dark:bg-gray-900 shadow-lg rounded-lg p-8">
			<h2 class="text-2xl font-semibold text-center text-gray-700 dark:text-gray-300 mb-6">Login</h2>
			<form action="{{ path('app_login') }}" method="POST">
				<div class="mb-4">
					<label for="_username" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Email</label>
					<input type="text" name="_username" value="{{ lastUsername }}" id="_username" class="block w-full shadow-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md border p-2 mt-1" placeholder="Username" required>
				</div>
				<div class="mb-4">
					<label for="_password" class="block text-sm font-medium text-gray-700 dark:text-gray-300">Password</label>
					<input type="password" name="_password" id="_password" class="block w-full shadow-sm border-gray-300 dark:border-gray-700 dark:bg-gray-800 dark:text-white rounded-md border p-2 mt-1" placeholder="Password" required>
				</div>
				<input type="hidden" name="_target_path" value="{{ path('app_blog') }}">
				<div>
					<button type="submit" name="login" class="w-full dark:bg-green-500 dark:hover:bg-green-400 text-white font-medium rounded-md p-2 mt-4">
						Log In
					</button>
				</div>
			</form>
			<p class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400">
				Not a Member?
				<a href="{{ path('app_register') }}" class="text-blue-500 hover:text-blue-400 dark:text-blue-400 dark:hover:text-blue-300 font-medium">Register</a>
			</p>
		</div>
	</div>
{% endblock %}
