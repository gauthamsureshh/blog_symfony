{% extends 'base.html.twig' %}

{% block title %}Home Page
{% endblock %}

{% block body %}

	{% include "partials/navbar.html.twig" %}

	<div class="max-w-4xl mx-auto px-4">
	{% for message in app.flashes('success') %}
		<div class="bg-green-100 text-green-800 px-4 py-3 rounded shadow mb-4">
			{{ message }}
		</div>
	{% endfor %}

	<div class="space-y-6">
		{% for blog in blogs %}
			<div class="bg-white dark:bg-gray-900 rounded-lg shadow-lg p-6 relative">

				<div class="absolute top-4 right-4 text-sm text-gray-500 dark:text-red-400">
					Created by: {{blog.author.username|capitalize}}
				</div>
				<h1 class="text-2xl font-bold text-gray-800 dark:text-gray-200 mb-2">
					{{ blog.title }}
				</h1>
				<h3 class="text-gray-700 dark:text-gray-300">
					{{ blog.content }}
				</h3>
			</div>
		{% endfor %}
	</div>
</div>


{% endblock %}
