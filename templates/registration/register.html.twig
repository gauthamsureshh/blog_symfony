{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% include "partials/navbar.html.twig" %}


	<div class="flex justify-center items-center min-h-[calc(100vh-5rem)] bg-gray-100 dark:bg-gray-800">
		<div class="w-full max-w-md bg-white dark:bg-gray-900 shadow-lg rounded-lg p-8">
			<h2 class="text-2xl font-semibold text-center text-gray-700 dark:text-gray-300 mb-6">Register</h2>
			{{ form_start(registrationForm, {'attr':{'novalidate':'novalidate'}}) }}
			<div>{{form_errors(registrationForm)}}</div>
			<div>
				{{ form_label(registrationForm.username, 'Username', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
				{{ form_widget(registrationForm.username, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-300 bg-white dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(registrationForm.username) }}
				</div>
			</div>
			<div>
				{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
				{{ form_widget(registrationForm.email, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-300 bg-white dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(registrationForm.email) }}
				</div>
			</div>
			<div>
				{{ form_label(registrationForm.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
				{{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-300 bg-white dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(registrationForm.plainPassword.first) }}
				</div>
			</div>
			<div>
				{{ form_label(registrationForm.plainPassword.second, 'Confirm Password', {'label_attr': {'class': 'block text-sm text-gray-700 dark:text-gray-300 font-medium'}}) }}
				{{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'block w-full shadow-sm border-gray-300 dark:border-gray-700 text-gray-900 dark:text-gray-300 bg-white dark:bg-gray-800 rounded-md border p-2 mt-1 mb-2'}}) }}
				<div class="text-red-500 text-sm">
					{{ form_errors(registrationForm.plainPassword.second) }}
				</div>
			</div>
			<div>
				<button type="submit" class="block w-full shadow-sm border-transparent  dark:bg-green-500 dark:hover:bg-green-400 text-white rounded-md border p-2 mt-4 mb-2">Register</button>
			</div>
			{{ form_end(registrationForm) }}
			<p class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400">
				Already a Member?
				<a href="{{ path('app_login') }}" class="text-blue-500 hover:text-blue-400 dark:text-blue-400 dark:hover:text-blue-300 font-medium">Login</a>
			</p>
		</div>
	</div>

{% endblock %}
